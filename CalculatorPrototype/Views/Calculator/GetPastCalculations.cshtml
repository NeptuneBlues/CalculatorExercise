@model IEnumerable<Domain.Models.CalculationDto>

<h1>Past Calculations</h1>

<form asp-action="Index">
    <table border="1" style="width:100%">
        <tr>
            <th style="text-align:center">First Input</th>
            <th style="text-align:center">Operator</th>
            <th style="text-align:center">Second Input</th>
            <th style="text-align:center">Result</th>
            <th style="text-align:center">Error Message</th>
        </tr>
        @foreach (var calculationDto in Model)
        {
    <tr>
        <td style="text-align:center">@calculationDto.FirstInput</td>
        @switch (calculationDto.Operator.Trim())
        {
            case "0":
                <td style="text-align:center">+</td>
                break;

            case "1":
                <td style="text-align:center">-</td>
                break;

            case "2":
                <td style="text-align:center">*</td>
                break;

            case "3":
                <td style="text-align:center">/</td>
                break;
        }
        <td style="text-align:center">@calculationDto.SecondInput</td>
        <td style="text-align:center">@calculationDto.Result</td>
        <td style="text-align:center">@calculationDto.Error</td>
    </tr>
        }
    </table>


    <button type="submit">Calculate Something</button>
 </form>
