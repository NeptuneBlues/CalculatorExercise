@model CalculatorPrototype.Models.Calculator

@{
    ViewBag.Title = "Index";
}

<html>

<body>

    <div class="row">
        @using (Html.BeginForm("/Index", "calculator", FormMethod.Post))
        {
            <div class="form-group">
                <input type="text" class="form-control" id="firstInput" name="firstInput" value="@Model.firstInput" readonly />
            </div>
            <div class="text-center">
                <div class="form-group">
                    <content>
                        <button type="submit" id="1" value="1" name="number">1</button>
                        <button type="submit" id="2" value="2" name="number">2</button>
                        <button type="submit" id="3" value="3" name="number">3</button>
                    </content>
                </div>
                <div class="form-group">
                    <content>
                        <button type="submit" id="4" value="4" name="number">4</button>
                        <button type="submit" id="5" value="5" name="number">5</button>
                        <button type="submit" id="6" value="6" name="number">6</button>
                    </content>
                </div>
                <div class="form-group">
                    <content>
                        <button type="submit" id="7" value="7" name="number">7</button>
                        <button type="submit" id="8" value="8" name="number">8</button>
                        <button type="submit" id="9" value="9" name="number">9</button>
                    </content>
                </div>
            </div>
        }
    </div>

</body>

</html>
