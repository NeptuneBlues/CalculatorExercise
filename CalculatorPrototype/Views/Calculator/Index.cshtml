@model CalculatorLibrary.Calculator

@{
    ViewData["Title"] = "Calculator";
}

<form asp-action="RunCalculation">
    <div class="row">  
        <div class="text-center">
            <div class="form-group">
                <content>
                    <select asp-for="FirstInput" class="custom-select">
                        @for(int i = 0; i < 100; i++)
                        {
                            <option value="@i.ToString()">@i.ToString()</option>
                        }
                    </select>
                    <select asp-for="Operator" class="custom-select">
                        <option value="0">+</option>
                        <option value="1">-</option>
                        <option value="2">*</option>
                        <option value="3">/</option>
                    </select>
                    <select asp-for="SecondInput" class="custom-select">
                        @for (int i = 0; i < 100; i++)
                        {
                            <option value="@i.ToString()">@i.ToString()</option>
                        }
                    </select>
                </content>
            </div>
            <div class="form-group">
                <button type="submit" name="calculate" value="calculate">Calculate</button>
            </div>
            <div class="form-group">
                @if (Model.ErrorMessage != null)
                {
                    <label for"error" style="color:red">@Model.ErrorMessage</label>
                }
            </div>
            <div class="form-group">
                <label for="result">Result</label>
                <input asp-for="Result" type="text" value="@Model.Result" readonly/>
            </div>
        </div>
    </div>
</form>